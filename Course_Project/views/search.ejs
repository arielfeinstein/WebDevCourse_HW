<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Search</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .video-card-img {
            cursor: pointer;
            height: 180px;
            object-fit: cover;
        }
        .video-title {
            cursor: pointer;
            display: -webkit-box;
            line-clamp: 2;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
            height: 3em; /* Approx 2 lines */
            line-height: 1.5em;
        }
    </style>
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm mb-4">
        <div class="container-fluid">
            <span class="navbar-brand mb-0 h1">My App</span>
            <div class="d-flex align-items-center">
                <a href="/playlists" class="btn btn-outline-primary me-3">My Library</a>
                <span class="me-3" id="welcome-msg">Hello <%= user.username %></span>
                <!-- User Image Placeholder -->
                <img src="<%= user.imgUrl ? '/assets/avatars/' + user.imgUrl : 'https://via.placeholder.com/40' %>" alt="User Image" class="rounded-circle" id="user-img" width="40" height="40">
                <button class="btn btn-outline-danger ms-3" id="logout-btn" onclick="logout()">Logout</button>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="row justify-content-center mb-4">
            <div class="col-md-8">
                <form id="search-form" class="d-flex" method="GET" action="/search">
                    <input class="form-control me-2" type="search" placeholder="Search for songs or artists" aria-label="Search" id="search-input" name="q" value="<%= query %>">
                    <button class="btn btn-primary" type="submit">Search</button>
                </form>
            </div>
        </div>

        <div id="results-container" class="row row-cols-1 row-cols-md-3 g-4">
            <% if (error) { %>
                <div class="col-12 text-center text-danger">
                    Error occurred while searching: <%= error %>
                </div>
            <% } else if (results && results.length > 0) { %>
                <% results.forEach(video => { %>
                    <div class="col">
                        <div class="card h-100">
                            <img src="<%= video.thumbnail %>" class="card-img-top video-card-img" alt="<%= video.title %>" data-video-id="<%= video.videoId %>" data-video-title="<%= video.title %>">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title video-title" data-video-id="<%= video.videoId %>" data-video-title="<%= video.title %>"><%= video.title %></h5>
                                <p class="card-text text-muted small"><%= video.channelTitle %></p>
                                <p class="card-text small">
                                    <span class="badge bg-secondary"><%= video.duration %></span>
                                    <span class="text-muted ms-2"><%= video.viewCount %> views</span>
                                </p>
                                <div class="mt-auto">
                                    <button class="btn btn-outline-primary btn-sm w-100 add-to-playlist-btn" data-video-id="<%= video.videoId %>" data-video-title="<%= video.title %>">
                                        <i class="bi bi-plus-circle"></i> Add to Playlist
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else if (query) { %>
                <div class="col-12 text-center text-muted">
                    No results found for "<%= query %>"
                </div>
            <% } %>
        </div>
    </div>

    <!-- Video Player Modal -->
    <div class="modal fade" id="playerModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="playerModalLabel">Video Player</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body p-0">
                    <div class="ratio ratio-16x9">
                        <iframe id="player-iframe" src="" title="YouTube video player" allowfullscreen></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Add to Favorites Modal -->
    <div class="modal fade" id="favoritesModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add to Playlist</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="playlists-list" class="mb-4">
                        <!-- Playlists will be loaded here -->
                    </div>
                    <div class="mb-3">
                        <label for="new-playlist-name" class="form-label">Or create a new playlist:</label>
                        <div class="input-group">
                            <input type="text" class="form-control" id="new-playlist-name" placeholder="Playlist name">
                            <button class="btn btn-outline-primary" type="button" id="create-new-playlist-btn">Create</button>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Confirmation Alert Modal -->
    <div class="modal fade" id="confirmationModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Success</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p id="confirmation-message">Video added successfully!</p>
                    <a id="view-playlist-link" href="#" class="btn btn-primary">View Playlist</a>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // User data from server
        window.currentUser = {
            username: '<%= user.username %>',
            firstName: '<%= user.firstName %>',
            imgUrl: '<%= user.imgUrl && user.imgUrl.endsWith(".svg") ? "/assets/avatars/" + user.imgUrl : (user.imgUrl || "") %>'
        };
    </script>
    <script src="/scripts/common.js"></script>
    <script src="/scripts/search.js"></script>
</body>
</html>
